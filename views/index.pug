extends layout

block content
  div(class='row')
    div(class='col-md-6')
      form(method='POST', action='/login')
        div(class='form-group')
          label Usuario
          input(name='usuario', class='form-control')
        div(class='form-group')
          label Password
          input(type='password', name='password', class='form-control')
        input(type='submit' class='btn btn-default', value='Log in')
